<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
      <device>
      <!--
          Select the devices from some data structure in the service
          model. In this skeleton the devices are specified in a leaf-list.
          Select all devices in that leaf-list:
      -->
          <name>{/device}</name>
      <config>
        <router xmlns="urn:ios">
          <bgp>
            <as-no>36994</as-no>
            <address-family>
              <with-vrf>
                <ipv4>
                  <af>unicast</af>
                  <vrf>
                      <name>{/../../../../vrf}</name>
                      <neighbor>
                          <id>{/neighbor_ip}</id>
                        <remote-as>{/remote_as}</remote-as>
                        <activate/>
                        <send-community>
                        </send-community>
                        <as-override>
                        </as-override>
                        <description>{/description}</description>
                        <soo>{/soo}</soo>
                        <route-map >
                            <direction>in</direction>
                            <route-map-name>{/rplIN}</route-map-name>
                        </route-map>
                        <route-map >
                            <direction>{/rplOUT/direction}</direction>
                            <route-map-name>{/rplOUT/rpl_name}</route-map-name>
                        </route-map>
                    </neighbor>
                  </vrf>
                </ipv4>
              </with-vrf>
            </address-family>
          </bgp>
        </router>
      </config>
    </device>
  </devices>
</config-template>
